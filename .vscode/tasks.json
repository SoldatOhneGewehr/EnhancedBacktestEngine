{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build BacktestEngine",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++23",
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}/src/*.cpp",
        "-I${workspaceFolder}/include",
        "-o",
        "${workspaceFolder}/backtest"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build all source files with C++23"
    }
  ]
}
